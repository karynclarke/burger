<div class="container">

    <div class="jumbotron">
        <h1> Eat Da Burger </h1>
        <p> Enjoy a Delicious Burger Now! </p>
        <h2> Make a Burger </h2>
        <panel>
            <form class="create-form">
                <div class="form-group">
                    <label for="newburger"> Order Burger </label>
                    <input type="text" id="newburger" name="burger">
                    <button type="submit" class="btn btn-success" id="addBurger">
                        <span class="fa fa-cutlery"> </span>
                    </button>
                </div>
            </form>
        </panel>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel default">
                <div class="panel-heading" id="leftside"> <strong> Order Your Burger</strong></div>
                <div class="panel-body">

                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}}
                            </strong></span>
                        <button type="button" class="eatburger btn btn-warning" data-id={{this.id}}
                            data-newDevoured={{devour}}><span class="fa fa-usd"></span></button>
                        <hr>
                        {{/unless}}
                        {{/each}}
                    </ul>

                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="panel panel default">
                <div class="panel-heading" id="rightside"> <strong> Eat Your Burger</strong></div>
                <div class="panel-body">

                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                        <button type="button" class="trashburger btn btn-danger"  data-id={{this.id}}
                            data-newDevoured={{devour}}><span class="fa fa-trash"></span></button>
                        <hr>
                        {{/if}}
                        {{/each}}
                    </ul>
                   
                </div>
            </div>
        </div>
    </div>
</div>